{
  "name": "iris-monorepo",
  "version": "2.0.0",
  "description": "IRIS - Interoperable Research Interface System (Monorepo)",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "mobile": "npm run start --workspace=@iris/mobile",
    "mobile:android": "npm run android --workspace=@iris/mobile",
    "mobile:ios": "npm run ios --workspace=@iris/mobile",
    "mobile:web": "npm run web --workspace=@iris/mobile",
    "desktop": "npm run start --workspace=@iris/desktop",
    "desktop:dev": "npm run dev --workspace=@iris/desktop",
    "desktop:build": "npm run build --workspace=@iris/desktop",
    "build:all": "npm run build --workspaces --if-present",
    "type-check:all": "npm run type-check --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "install:all": "npm install",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "keywords": [
    "iris",
    "semg",
    "fes",
    "rehabilitation",
    "monorepo"
  ],
  "author": "PRISM Project",
  "license": "MIT",
  "devDependencies": {
    "typescript": "~5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "expo": "~52.0.47",
    "react": "18.3.1",
    "react-native": "0.76.9"
  }
}
